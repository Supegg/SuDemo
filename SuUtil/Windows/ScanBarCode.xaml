        <StackPanel Orientation="Horizontal">
        <TextBox Name="txtBarCode" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" FontSize="24"/>
